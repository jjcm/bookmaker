//variables
header-height = 96px
open-sans = 'Open Sans', sans-serif


//styles
html
  height: 100%
body
  font-size: 14px
  font-family: open-sans
  background-color: #333
  color: #ddd
  margin: 0
a
  color: #99B7FF

#header
  background-color: #252629
  overflow: hidden
  ul
    list-style: none
    margin: 0
    padding: 0
  li
    float: left
    height: header-height
  #home
    width: 234px
    background-image: url(/images/nonio-logo.png)
  #title
    padding: 0 24px
    background-color: #36383b
    h1
      padding-top: 24px
      margin: 0
      font-weight: 300
      text-transform: capitalize
  #page-container
    margin-left: 48px
    color: #fff
    #page
      margin-top: 24px
      height: 48px
      border-radius: 4px
      background-color: #f44255
      box-sizing: border-box
      font-size: 18px
      text-transform: uppercase
      padding: 11px 12px
      width: 180px
      background-image: url(/images/down-chevron.png)
      background-repeat: no-repeat
      background-position: 154px center
      cursor: pointer
      transition: background-color 0.2s ease-in-out
    #page:hover
      background-color: #fa3045
      transition: none
    #page-dropwdown
      display: none
  #add-page-container
    margin-left: 12px
    #add-page
      height: 48px
      width: 48px
      cursor: pointer
      margin-top: 24px
      border-radius: 4px
      background-color: #f44255
      background-image: url(/images/add.png)
      background-repeat: no-repeat
      background-position: center
    #add-page:hover
      background-color: #fa3045
    

#right-panel
  position: absolute
  background-color: #2e2f32
  right: 0px
  top: 0px
  width: 500px
  box-sizing: border-box
  padding-top: header-height
  height: 100%
  overflow: hidden

#layers
  position: relative
  display: inline-block
  background-color: #191919
  width: 500px
  height: 100%
  .layer
    position: absolute
    left: 40px
    width: 326px
    height: 80px
    transform: perspective(400px) rotateX(45deg)
    box-shadow: 0 10px 18px rgba(#000000ff)
    cursor: -webkit-grab
    .image-container
      position: absolute
      left: 0px
      top: 0px
      background-image: url(/images/transparentPattern.png)
      width: 126px
      height: 80px
    .content
      position: absolute
      right: 0px
      top: 0px
      width: 200px
      height: 80px
      background-color: #1e1e1e
      .name
        color: #fff
        position: absolute
        text-align: right
        width: 150px
        right: 56px
        bottom: 12px
        font-size: 22px
      .delete
        width: 24px
        height: 24px
        position: absolute
        right: 16px
        bottom: 16px
        background-image: url(/images/deleteLayer.png)
        background-position: center center
        background-repeat: no-repeat
        background-color: rgba(#FFFFFF55)
        cursor: pointer
        transition: background-color 0.2s ease-in-out
      .delete:hover
        background-color: rgba(#FFFFFF88)
        transition: none
      .delete:active
        background-color: rgba(#FFFFFF33)
        transition: none

    .shadow
      opacity: 0.8
      width: 355px
      height: 111px
      position: absolute
      top: 0px
      left: -14px
      background-image: url(/images/layerShadow.png)
  .layer:active
    cursor: -webkit-grabbing

