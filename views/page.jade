extends layout

block head

block content
  #header
    ul
      li#home
      li#title
        h1= title
      li#page-container
        #page
          | PAGE: 
          = page
        #page-dropwdown
      li#add-page-container
        #add-page

  ul#images(ng-controller='ImageController')
    li(ng-repeat='image in images', data-depth="{{image._id}}")
      img(src='{{image.path}}')

  
  #right-panel
    #weight-adjustment
      #x-weight
        .label
          | x-weight
        #x-weight-control.bar-container
          .bar
            .inner-bar
      #y-weight
        .label
          | y-weight
        #y-weight-control.bar-container
          .bar
            .inner-bar

    #layers(ng-controller='ImageController')
      
      .layer(ng-repeat='image in images', id='{{image._id}}', style='top: {{image.depth || 0}}%; z-index: {{100 - image.depth || 100}};', data-depth='{{image.depth || 0}}')
        .image-container
          .image(style="background-image: url({{image.path}})")
        .content
          .name
            {{image.name || "untitled"}}
          .delete



  script(type="text/javascript")
    | var page = "!{page}"
  script(src="/javascripts/pages.js")


